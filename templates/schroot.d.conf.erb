[<%= @vchroot -%>]
description=<%= @description %>
type=directory
directory=<%= @target %>
<% if @arch == 'i386' && @architecture == 'amd64'  -%>
personality=linux32
<% end -%>
<% if @users and !@users.empty? -%>
users=<%= [@users].flatten.compact.join(',') %>
<% end -%>
<% if @groups and !@groups.empty? -%>
users=<%= [@groups].flatten.compact.join(',') %>
<% end -%>
<% if @root_users and !@root_users.empty? -%>
root-users=<%= [@root_users].flatten.compact.join(',') %>
<% end -%>
<% if @root_groups and !@root_groups.empty? -%>
root-groups=<%= [@root_groups].flatten.compact.join(',') %>
<% end -%>
